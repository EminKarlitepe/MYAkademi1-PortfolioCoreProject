@model Portfolio

@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Portfolio Güncelleme Sayfası</h1>

<form method="post">
    <input type="hidden" asp-for="PortfolioId" />
    <div class="form-group">
        <label for="Title">Portfolio Başlığı</label>
        <input type="text" asp-for="Title" class="form-control" id="Title" />
    </div>

    <div class="form-group">
        <label for="Description">Portfolio Açıklaması</label>
        <input type="text" asp-for="Description" class="form-control" id="Description" />
    </div>

    <div class="form-group">
        <label for="ImageUrl">Portfolio Resim Yolu</label>
        <input type="text" asp-for="ImageUrl" class="form-control" id="ImageUrl" />
    </div>

    <div class="form-group">
        <label for="CategoryId">Kategori</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryList" id="CategoryId">
            <option value="">Kategori Seçiniz</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Yeteneği Güncelle</button>
</form>
