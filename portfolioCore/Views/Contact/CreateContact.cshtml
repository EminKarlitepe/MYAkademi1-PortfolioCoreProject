@model Contact

@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni İletişim Bilgisi Ekleme Sayfası</h2>

<form method="post">
    <label>Adres</label>
    <input type="text" asp-for="Address" class="form-control">
    <br />
    <label>Mail Adresi</label>
    <input type="text" asp-for="Email" class="form-control">
    <br />
    <label>Telefon Numarası</label>
    <input type="text" asp-for="PhoneNumber" class="form-control">
    <br />
    <label>Lokasyon</label>
    <input type="text" asp-for="Location" class="form-control">
    <br />
    <button class="btn btn-primary">İletişim Bilgisini Ekle</button>
</form>