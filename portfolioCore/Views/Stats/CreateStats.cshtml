@model Stats

@{
    ViewData["Title"] = "CreateStats";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni İstatistik Ekleme Sayfası</h2>
<form method="post">
    <label>İstatistik Adı</label>
    <input type="text" asp-for="StatsName" class="form-control" />
    <br />
    <label>İstatistik Değeri</label>
    <input type="text" asp-for="StatsValue" class="form-control" />
    <br />
    <<button class="btn btn-primary">İstatistiği Ekle</button>
</form>

