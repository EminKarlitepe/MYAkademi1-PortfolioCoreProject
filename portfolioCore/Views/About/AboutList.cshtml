@using PortfolioCore.Entities
@model List<About>
@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkımda</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>İsim</th>
        <th>Hakkımda Üst</th>
        <th>Doğum Tarihi</th>
        <th>Linkedin</th>
        <th>Telefon</th>
        <th>Şehir</th>
        <th>Yaş</th>
        <th>Eğitim</th>
        <th>Mail</th>
        <th>Freelance</th>
        <th>Hakkımda Yazısı</th>
        <th>Resim Url</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutId</td>
            <td>@item.FullName</td>
            <td>@item.AboutHead</td>
            <td>@item.BirthDate</td>
            <td>@item.Linkedin</td>
            <td>@item.PhoneNumber</td>
            <td>@item.City</td>
            <td>@item.Age</td>
            <td>@item.Degree</td>
            <td>@item.Email</td>
            <td>@item.Freelance</td>
            <td>@item.AboutText</td>
            <td>@item.ImageUrl</td>
            <td>
                <a href="/About/DeleteAbout/@item.AboutId" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/About/UpdateAbout/@item.AboutId" class="btn btn-warning">Güncelle</a>
            </td>
        </tr>
    }
</table>
